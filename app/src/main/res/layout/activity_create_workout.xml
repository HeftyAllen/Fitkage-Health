<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@drawable/personal_info_bg_gradient"
    tools:context=".workouts.CreateWorkoutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Create Custom Workout"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Workout Name Input -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workout Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/white_60"
                    app:placeholderTextColor="@color/white_60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/workoutNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter workout name"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_60"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Search Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Exercises"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@color/input_background"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/white_60">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/searchEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search exercises by name, body part, or target..."
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_60"
                            android:imeOptions="actionSearch"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:text="Search"
                        android:textColor="@color/white"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/colorPrimary"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Search Tips -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Try: chest, arms, legs, abs, push, pull, etc."
                    android:textColor="@color/white_60"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Two Column Layout for Search Results and Selected Exercises -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Search Results -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Search Results"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/searchResultsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 exercises"
                                android:textColor="@color/white_60"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/searchResultsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="400dp"
                            android:padding="8dp"
                            tools:listitem="@layout/item_exercise_search" />

                        <!-- Loading State -->
                        <ProgressBar
                            android:id="@+id/searchProgressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="16dp"
                            android:visibility="gone" />

                        <!-- Empty State -->
                        <TextView
                            android:id="@+id/emptySearchText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No exercises found. Try a different search term."
                            android:textColor="@color/white_60"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="32dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Selected Exercises -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Selected Exercises"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selectedExercisesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 exercises"
                                android:textColor="@color/white_60"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selectedExercisesRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:padding="8dp"
                            tools:listitem="@layout/item_selected_exercise" />

                        <!-- Empty Selected State -->
                        <TextView
                            android:id="@+id/emptySelectedText"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:text="No exercises selected yet.\nSearch and add exercises to build your workout."
                            android:textColor="@color/white_60"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveWorkoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Save Custom Workout"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_save"
            app:iconGravity="textStart"
            app:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>