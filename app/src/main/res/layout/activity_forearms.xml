<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forearm Focus"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Forearm Image -->
        <ImageView
            android:id="@+id/forearmImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/forearms"
            android:background="@drawable/rounded_image_clip"
            android:clipToOutline="true"
            android:contentDescription="Forearm Image"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strengthen your wrists, grip, and forearm muscles with these targeted exercises."
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Exercises Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Exercises List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Wrist Curls\n• Reverse Curls\n• Grip Squeezes\n• Farmer Carries"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- YouTube Link -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Demonstration:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/youtubeLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="https://www.youtube.com/watch?v=exampleForearm"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15sp"
            android:layout_marginBottom="24dp" />

        <!-- Start Workout Button -->
        <Button
            android:id="@+id/startWorkoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Workout"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button" />




    </LinearLayout>
</ScrollView>
