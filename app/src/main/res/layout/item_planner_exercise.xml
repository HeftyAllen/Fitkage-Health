<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/input_background"
    android:layout_marginBottom="12dp"
    android:elevation="6dp">

    <!-- Header Row with Exercise Name and Checkbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Body Part -->
    <TextView
        android:id="@+id/bodyPartText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body Part"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- GIF / image -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/exerciseGif"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="Exercise GIF"
        android:layout_marginTop="12dp" />

    <!-- Sets and Reps Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <!-- Sets Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/removeSetBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_remove"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/setsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:minWidth="40dp"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/addSetBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_add"
                    app:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reps Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/removeRepBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_remove"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/repsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="12"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:minWidth="40dp"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/addRepBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_add"
                    app:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Rest Time Info -->
    <TextView
        android:id="@+id/restTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rest: 60s between sets"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="12dp" />

</LinearLayout>