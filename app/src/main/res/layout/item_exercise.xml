<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_exercise.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/personal_info_card_bg"
    android:layout_marginBottom="12dp"
    android:elevation="6dp">

    <!-- Left: GIF / image -->
    <ImageView
        android:id="@+id/exerciseGif"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="exercise image"
        android:background="@drawable/input_background" />

    <!-- Middle: texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Body part (new, adapter expects bodyPartText) -->
        <TextView
            android:id="@+id/bodyPartText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Part"
            android:textColor="#DDDDDD"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <!-- Target (adapter expects targetText) -->
        <TextView
            android:id="@+id/targetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Muscle"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Right: checkbox + settings button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:icon="@drawable/ic_check"
            android:focusableInTouchMode="false"/>

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
