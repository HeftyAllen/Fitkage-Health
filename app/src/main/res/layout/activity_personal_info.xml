<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_info_bg_gradient"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Setup"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="14dp"/>

        <!-- Step header -->
        <TextView
            android:id="@+id/tvStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1 of 3 â€” Basic"
            android:textColor="#DDDDDD"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Card container (ViewFlipper for steps) -->
        <LinearLayout
            android:id="@+id/cardWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/personal_info_card_bg"
            android:padding="18dp"
            android:elevation="6dp">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tell us about you"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="First name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextSurname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Surname"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goals &amp; measurements"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Units row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Height unit"
                            android:textColor="#CCCCCC"/>

                        <Spinner
                            android:id="@+id/spnHeightUnit"
                            android:layout_width="140dp"
                            android:layout_height="44dp"
                            android:background="@drawable/spinner_background"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Weight unit"
                            android:textColor="#CCCCCC"/>

                        <Spinner
                            android:id="@+id/spnWeightUnit"
                            android:layout_width="140dp"
                            android:layout_height="44dp"
                            android:background="@drawable/spinner_background"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextSteps"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Daily steps goal"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Age"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextGender"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Gender"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextHeight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:hint="Height"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:hint="Weight"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:background="@drawable/input_background"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm your details"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/summaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#EAEAEA"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:background="@drawable/summary_card_bg"/>
                </LinearLayout>

            </ViewFlipper>

        </LinearLayout>

        <!-- bottom nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Back"
                android:visibility="gone"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <Button
                android:id="@+id/idAdd"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="48dp"
                android:text="Next"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
