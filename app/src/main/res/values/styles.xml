<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================= -->
    <!-- Base Application Theme (Material3) -->
    <!-- ============================= -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowBackground">?android:attr/windowBackground</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="ModernAlertDialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/black</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- ============================= -->
    <!-- Base ShapeAppearance definitions to satisfy AAPT -->
    <!-- ============================= -->
    <style name="ShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent" />
    <style name="ShapeAppearanceOverlay" />

    <!-- Corner 8dp overlay -->
    <style name="ShapeAppearanceOverlay.CornerSize8" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- ============================= -->
    <!-- Workout / Recipe Card Style -->
    <!-- ============================= -->
    <style name="WorkoutCardStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/workout_card_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- ============================= -->
    <!-- Workout / Recipe Text Styles -->
    <!-- ============================= -->
    <style name="WorkoutTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WorkoutSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- ============================= -->
    <!-- Calendar Text & Container -->
    <!-- ============================= -->
    <style name="CalendarTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/calendar_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarContainerStyle" >
        <item name="android:background">@drawable/bg_calendar_card</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- ============================= -->
    <!-- Workout / Recipe Image Style -->
    <!-- ============================= -->
    <style name="WorkoutImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/rounded_image_clip</item>
    </style>

    >


</resources>
