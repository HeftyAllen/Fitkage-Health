<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- back small circle -->
    <item android:width="10dp" android:height="10dp" android:gravity="left|center_vertical" android:left="0dp">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <solid android:color="#9CA3AF"/>
        </shape>
    </item>

    <!-- middle small circle -->
    <item android:width="10dp" android:height="10dp" android:gravity="center|center_vertical">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <solid android:color="#9CA3AF"/>
        </shape>
    </item>

    <!-- right small circle -->
    <item android:width="10dp" android:height="10dp" android:gravity="right|center_vertical" android:right="0dp">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <solid android:color="#9CA3AF"/>
        </shape>
    </item>
</layer-list>
