<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- outer circle -->
    <item android:width="18dp" android:height="18dp">
        <shape android:shape="oval">
            <size android:width="18dp" android:height="18dp"/>
            <solid android:color="#00000000"/>
            <stroke android:width="1.5dp" android:color="#9CA3AF"/>
        </shape>
    </item>

    <!-- minute hand (vertical rectangle positioned slightly above center) -->
    <item android:width="2dp" android:height="6dp" android:gravity="center|top" android:top="6dp">
        <shape android:shape="rectangle">
            <size android:width="2dp" android:height="6dp"/>
            <solid android:color="#9CA3AF"/>
        </shape>
    </item>

    <!-- hour hand (horizontal rectangle positioned slightly left-of-center) -->
    <item android:width="5dp" android:height="2dp" android:gravity="center|left" android:left="8dp">
        <shape android:shape="rectangle">
            <size android:width="5dp" android:height="2dp"/>
            <solid android:color="#9CA3AF"/>
        </shape>
    </item>

</layer-list>
